@using DAL.Models;
@model Provider


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Create Provider</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name of Provider</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Number">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Add Provider</button>
        <a asp-controller="Provider" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
