@using DAL.Models;
@model OrderItem

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Order Details</h2>
    </div>

    <form method="post" asp-action="AddItemToOrder">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <input type="hidden" class="form-control mb-3" asp-for="@Model.OrderId">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Name">Order Item Name</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Quantity">Item Price</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Quantity">
                <span asp-validation-for="@Model.Quantity" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Unit">Units</label>
                <input type="text" class="form-control mb-3" asp-for="@Model.Unit">
                <span asp-validation-for="@Model.Unit" class=" alert-danger"></span>
            </div>
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To Orders</a>
    </form>
</div>

