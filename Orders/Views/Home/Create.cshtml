@using DAL.Models;
@model Order 


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Create Order</h2>
    </div>

    <form method="post" asp-action="Create">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Number">Number of Order</label>
                <input type="text" class="form-control mb-3" asp-for="Number" placeholder="Enter Number">
                <span asp-validation-for="Number" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Date">Date</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="Date" placeholder="Enter Date">
                <span asp-validation-for="Date" class=" alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ProviderId" class="control-label">Provider</label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.Providers"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
